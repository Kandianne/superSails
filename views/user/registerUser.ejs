<h3 class="container">You're looking at: <code><%= view.pathFromApp + '.' +view.ext %></code></h3>

<form action="/user/create" method="POST" class="form-group">
  <h1>Register here!</h1>

  <% if(flash && flash.err) { %>
  <ul class="alert">
    <% Object.keys(flash.err).forEach(function(error) { %>
      <li><%- JSON.stringify(flash.err[error])%></li>
    <% }) %>
  </ul>
  <% } %>

  <input type="text" name="userName" placeholder="Enter Username Here..." class="form-control">
  <input type="text" name="title" placeholder="Enter Title Here..." class="form-control">
  <input type="email" name="email" placeholder="Enter Email Here..." class="form-control">
  <input type="password" name="password" placeholder="Enter Password Here..." class="form-control">
  <input type="password" name="confirmation" placeholder="Confirm Password Here..." class="form-control">
  <button type="submit" class="btn btn-lg">Finish</button>
  <input type="hidden" name="_csrf" value="<%= _csrf %>"/>

</form>

